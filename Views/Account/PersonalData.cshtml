@model bikevision.Models.Customer
@{
    ViewBag.Title = "Dane personalne";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2> Dane osobiste </h2>
<hr />

@if (Model != null)
{
    <table class="table table-striped text-primary">
        <tbody>
            <tr>
                <th scope="row">Imię:</th>
                <td>@Model.name</td>
            </tr>
            <tr>
                <th scope="row">Nazwisko:</th>
                <td>@Model.surname</td>
            </tr>
            <tr>
                <th scope="row">Nr telefonu:</th>
                <td>@Model.telephoneNumber</td>
            </tr>
            <tr>
                <th scope="row">E-mail:</th>
                <td>@Model.emailAddress</td>
            </tr>
            <tr>
                <th scope="row">Adres zamieszkania:</th>
                <td>@Model.addressOfResidence</td>
            </tr>
            <tr>
                <th scope="row">Miejscowość:</th>
                <td>@Model.Locality.locality1</td>
            </tr>
            <tr>
                <th scope="row">Kod pocztowy:</th>
                <td>@Model.zipCode</td>
            </tr>
        </tbody>
    </table>

    using (Html.BeginForm("EditPersonalData", "Account"))
    {
        <input type="submit" class="mt-3 btn btn-primary" value="Edytuj dane" />
    }
}
else
{
    <p> Nie posiadasz jeszcze profilu klienta </p>

    using (Html.BeginForm("EditPersonalData", "Account"))
    {
        <input type="submit" class="mt-3 btn btn-primary" value="Dodaj profil klienta" />
    }
}