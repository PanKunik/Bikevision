@model bikevision.Models.Service
@{
    ViewBag.Title = "Szczegóły zlecenia";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

    <div class="col text-primary">
        <div class="row p-0 m-0">
            <h2>@(ViewBag.Title + " nr " + Model.idService)</h2>
        </div>
        <hr />

        <div class="row p-0 m-0">
            <p class="col-6 font-weight-bold">Czego dotyczy zlecenie:</p>
            <p class="col-6">@Model.title</p>
        </div>

        <div class="row p-0 m-0">
            <p class="col-6 font-weight-bold">Typ zlecenia:</p>
            <p class="col-6">@Model.ServiceType.type</p>
        </div>

        <div class="row p-0 m-0">
            <p class="col-6 font-weight-bold">Data przyjęcia zlecenia:</p>
            <p class="col-6">@Model.dateOfEmployment</p>
        </div>

        <div class="row p-0 m-0">
            <p class="col-6 font-weight-bold">Opis:</p>
            <p class="col-6">@Model.description</p>
        </div>

        <div class="row p-0 m-0">
            <p class="col-6 font-weight-bold">Cena:</p>
            <p class="col-6">@if (Model.price == 0) { <span>Oczekuje na wycenę</span> } else { @String.Format("{0:F2} zł", Model.price); }</p>
        </div>
    </div>
