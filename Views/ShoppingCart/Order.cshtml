@model bikevision.Models.Customer

@{
    ViewBag.Title = "Zamówienie";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}
<section class="container py-5 text-primary">
    
    <article class="d-flex flex-row">
        @if (Request.IsAuthenticated)
        {
            using (Html.BeginForm("Order", "ShoppingCart", null, FormMethod.Post, new { @class = "d-flex flex-column flex-fill", role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.Partial("_CheckData", Model)
            }
        }
        else
        {
            <div class="d-flex flex-column flex-fill">

                @using (Html.BeginForm("Order", "ShoppingCart", null, FormMethod.Post, new { @class = "d-flex flex-column", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-12" })
                        <div class="col-12">
                            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control col-12" } })
                            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger col-12" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.surname, htmlAttributes: new { @class = "control-label col-12" })
                        <div class="col-12">
                            @Html.EditorFor(model => model.surname, new { htmlAttributes = new { @class = "form-control col-12" } })
                            @Html.ValidationMessageFor(model => model.surname, "", new { @class = "text-danger col-12" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.emailAddress, htmlAttributes: new { @class = "control-label col-12" })
                        <div class="col-12">
                            @Html.EditorFor(model => model.emailAddress, new { htmlAttributes = new { @class = "form-control col-12" } })
                            @Html.ValidationMessageFor(model => model.emailAddress, "", new { @class = "text-danger col-12" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.telephoneNumber, htmlAttributes: new { @class = "control-label col-12" })
                        <div class="col-12">
                            @Html.EditorFor(model => model.telephoneNumber, new { htmlAttributes = new { @class = "form-control col-12" } })
                            @Html.ValidationMessageFor(model => model.telephoneNumber, "", new { @class = "text-danger col-12" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Locality.locality1, htmlAttributes: new { @class = "control-label col-12" })
                        <div class="col-12">
                            @Html.EditorFor(model => model.Locality.locality1, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Locality.locality1, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.addressOfResidence, htmlAttributes: new { @class = "control-label col-12" })
                        <div class="col-12">
                            @Html.EditorFor(model => model.addressOfResidence, new { htmlAttributes = new { @class = "form-control col-12" } })
                            @Html.ValidationMessageFor(model => model.addressOfResidence, "", new { @class = "text-danger col-12" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.zipCode, htmlAttributes: new { @class = "control-label col-12" })
                        <div class="col-12">
                            @Html.EditorFor(model => model.zipCode, new { htmlAttributes = new { @class = "form-control col-12" } })
                            @Html.ValidationMessageFor(model => model.zipCode, "", new { @class = "text-danger col-12" })
                        </div>
                    </div>

                    <input class="btn btn-primary" type="submit" value="Kontynuuj bez rejestracji">
                }
            </div>
        }
    </article>
</section>
