@{
    ViewBag.Title = "Zaloguj się";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="card bg-transparent border-0">
    <header class="card-header bg-transparent border-light p-3">
        <h2> Logowanie </h2>

        <div class="d-flex flex-row justify-content-end social-icon">
            <!--
                <span><i class="fab fa-facebook-square big-icon"></i></span>
                <span><i class="fab fa-google-plus-square big-icon mx-2"></i></span>
                <span><i class="fab fa-twitter-square big-icon"></i></span>
            -->
        </div>
    </header>

    <section class="card-body bg-transparent p-3">
        <form method="post" class="d-flex flex-column">
            <div class="d-flex flex-column form-group mb-0">
                <div class="input-group py-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text border-0"><i class="fas fa-user"></i></div>
                    </div>
                    <input data-validation-error-msg="Nie wpisałeś poprawnego loginu" data-validation="required" type="text" class="form-control mw-100" id="login" placeholder="Login">
                </div>
            </div>

            <div class="d-flex flex-column form-group mb-0 py-1">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text border-0"><i class="fas fa-key"></i></div>
                    </div>
                    <input data-validation-error-msg-container="#password-validation-error" data-validation-error-msg="Nie wpisałeś poprawnego hasła" data-validation="required" type="password" class="form-control mw-100" id="password" placeholder="Hasło">
                </div>
            </div>

            <div class="pt-1">
                <input type="checkbox" name="rememberUser" id="rememberMe" value="yes" />
                <label for="rememberMe"> Zapamiętaj mnie </label>
            </div>

            <div class="input-group pt-1 justify-content-end">
                <button type="submit" id="submit" class="btn btn-primary"> Zaloguj </button>
            </div>
        </form>
    </section>

    <footer class="card-footer bg-transparent border-light p-3">
        <span class="d-flex justify-content-center">Nie masz jeszcze konta? &nbsp; <a href="#" class=""> Zarejestruj się. </a></span>
        <a href="#" class="d-flex justify-content-center"> Nie pamiętasz hasła? </a>
    </footer>

    <div id="validation-errors-container" class="form-error alert alert-danger d-none">
        <strong> Nieprawidłowe dane w formularzu! </strong>
        <ul id="errorList">
            <li class="d-none" id="loginErrorListElement"> Bledny login </li>
            <li class="d-none" id="passwordErrorListElement"> Bledne haslo </li>
        </ul>
    </div>
</div>


@section scripts
{
    @Scripts.Render("~/Scripts/Form validators/login-form.validation.js")
}