@{
    ViewBag.Title = "Zarejestruj się";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="card bg-transparent border-0">
    <header class="card-header bg-transparent border-light p-3">
        <h2> Rejestracja </h2>
    </header>

    <section class="card-body bg-transparent p-3">
        <form method="post" class="d-flex flex-column">
            <div class="d-flex flex-column form-group mb-0">
                <div class="input-group py-2">
                    <div class="input-group-prepend">
                        <label for="email" class="input-group-text border-0"><i class="fas fa-envelope"></i></label>
                    </div>
                    <input data-validation-field-name="E-mail" data-validation="required email length" data-validation-error-msg="Nie wpisałeś poprawnego adresu e-mail" data-validation-length="5-50" type="email" class="form-control mw-100" name="email" id="email" placeholder="E-Mail">
                </div>
            </div>

            <div class="d-flex flex-column form-group mb-0">
                <div class="input-group py-2">
                    <div class="input-group-prepend">
                        <label for="login" class="input-group-text border-0"><i class="fas fa-user"></i></label>
                    </div>
                    <input data-validation-field-name="Login"  data-validation="length" data-validation-optional-if-answered="email" data-validation-length="5-50" type="text" class="form-control mw-100" id="login" placeholder="Login">
                </div>
            </div>

            <div class="d-flex flex-column form-group mb-0">
                <div class="input-group py-2">
                    <div class="input-group-prepend">
                        <label for="password" class="input-group-text border-0"><i class="fas fa-key"></i></label>
                    </div>
                    <input data-validation-field-name="Hasło"  data-validation="required length" data-validation-length="8-50" type="password" class="form-control mw-100" id="password" placeholder="Hasło">
                </div>
            </div>

            <div class="d-flex flex-column form-group mb-0">
                <div class="input-group py-2">
                    <div class="input-group-prepend">
                        <label for="repeatPassword" class="input-group-text border-0"><i class="fas fa-key"></i></label>
                    </div>
                    <input data-validation="required length" data-validation-length="8-50" type="password" class="form-control mw-100" id="repeatPassword" placeholder="Powtórz hasło">
                </div>
            </div>

            <div class="pt-1">
                <label for="terms"><input data-validation="required" data-validation-error-msg="Wymagane jest zapoznanie się z regulaminem" type="checkbox" name="terms" id="terms" value="yes" /> Zapoznałem się z <a href="#">regulaminem</a>... </label>
            </div>

            <div class="pt-1">
                <label for="privacyPolicy"><input data-validation="required" data-validation-error-msg="Musisz wyrazić zgodę na przetwarzanie danych" type="checkbox" name="privacyPolicy" id="privacyPolicy" value="yes" /> Wyrażam zgodę na przetwarzanie moich danych w celu... </label>
            </div>

            <div class="input-group pt-1 justify-content-end">
                <button type="submit" id="submit" class="btn btn-primary"> Załóż konto </button>
            </div>
        </form>
    </section>

    <footer class="card-footer bg-transparent border-light p-3"></footer>

    <div id="validation-errors-container" class="form-error alert alert-danger d-none">
        <strong> Nieprawidłowe dane w formularzu! </strong>
        <ul id="errorList">
            <li class="d-none" id="emailErrorListElement"> Bledny email </li>
            <li class="d-none" id="loginErrorListElement"> Bledny login </li>
            <li class="d-none" id="passwordErrorListElement"> Bledne haslo </li>
            <li class="d-none" id="repeatPasswordErrorListElement"> Bledne powtorne haslo </li>
            <li class="d-none" id="termsErrorListElement"> Zaznacz ragulamin </li>
            <li class="d-none" id="privacyPolicyErrorListElement"> Zaznacz zgode </li>
        </ul>
    </div>
</div>


@section scripts
{
    @Scripts.Render("~/Scripts/Form validators/registration-form.validation.js")
}