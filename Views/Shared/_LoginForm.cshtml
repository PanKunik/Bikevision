@model bikevision.Models.LoginViewModel

    <div class="d-flex flex-column form-group mb-0">
        <div class="input-group py-2">
            <div class="input-group-prepend">
                <label for="email" class="input-group-text border-0"><i class="fas fa-user"></i></label>
            </div>
            @*<input data-validation-error-msg="Nie wpisałeś poprawnego adresu e-mail" data-validation="required email" type="email" class="form-control mw-100" id="email" placeholder="E-mail">*@

            @Html.TextBoxFor(m => m.Email, new { @class = "form-control mw-100", @data_validation_error_msg = "Nie wpisałeś poprawnego adresu e-mail", @data_validation = "required email", @type = "email", id = "email", @placeholder = "E-mail" })
        </div>
    </div>

    <div class="d-flex flex-column form-group mb-0 py-1">
        <div class="input-group">
            <div class="input-group-prepend">
                <label for="password" class="input-group-text border-0"><i class="fas fa-key"></i></label>
            </div>

            @Html.TextBoxFor(m => m.Password, new { @class = "form-control mw-100", @data_validation_error_msg = "Nie wpisałeś poprawnego hasła", @data_validation = "required", @type = "password", id = "password", @placeholder = "Hasło" })
        </div>
    </div>

    <div class="pt-1">
        @*<input type="checkbox" name="rememberUser" id="rememberMe" value="yes" />*@
        @Html.CheckBoxFor(m => m.RememberMe)
        @Html.LabelFor(m => m.RememberMe)
        @*<label for="rememberMe"> Zapamiętaj mnie </label>*@
    </div>

    <div class="input-group pt-1 justify-content-end">
        <button type="submit" id="submit" class="btn btn-primary"> Zaloguj </button>
    </div>
