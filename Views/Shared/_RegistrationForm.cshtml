@model bikevision.Models.RegisterViewModel

    <div class="d-flex flex-column form-group mb-0">
        <div class="input-group py-2">
            <div class="input-group-prepend">
                <label for="email" class="input-group-text border-0"><i class="fas fa-envelope"></i></label>
            </div>
            @*<input data-validation-field-name="E-mail" data-validation="required email length" data-validation-error-msg="Nie wpisałeś poprawnego adresu e-mail" data-validation-length="5-50" type="email" class="form-control mw-100" name="email" id="email" placeholder="E-Mail"><br />*@
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control mw-100", @data_validation_length = "5-50", @type = "email", @id = "email", @name = "email", @placeholder = "E-mail", @data_validation_field_name = "E-mail", @data_validation = "required email length", @data_validation_error_msg = "Nie wpisałeś poprawnego adresu e-mail" })
        </div>
    </div>

    @*<div class="d-flex flex-column form-group mb-0">
            <div class="input-group py-2">
                <div class="input-group-prepend">
                    <label for="login" class="input-group-text border-0"><i class="fas fa-user"></i></label>
                </div>
                <input data-validation-field-name="Login" data-validation="length" data-validation-optional-if-answered="email" data-validation-length="5-50" type="text" class="form-control mw-100" id="login" placeholder="Login">
            </div>
        </div>*@

    <div class="d-flex flex-column form-group mb-0">
        <div class="input-group py-2">
            <div class="input-group-prepend">
                <label for="password" class="input-group-text border-0"><i class="fas fa-key"></i></label>
            </div>
            @*<input data-validation-field-name="Hasło" data-validation="required length" data-validation-length="8-50" type="password" class="form-control mw-100" id="password" placeholder="Hasło">*@
            @Html.PasswordFor(m => m.Password, new { @class = "form-control mw-100", @data_validation_field_name = "Hasło", @data_validation = "required length", @data_validation_length = "8-50", @type = "password", @id = "password", @placeholder = "Hasło" })

        </div>
    </div>

    <div class="d-flex flex-column form-group mb-0">
        <div class="input-group py-2">
            <div class="input-group-prepend">
                <label for="repeatPassword" class="input-group-text border-0"><i class="fas fa-key"></i></label>
            </div>
            @*<input data-validation="required length" data-validation-length="8-50" type="password" class="form-control mw-100" id="repeatPassword" placeholder="Powtórz hasło">*@
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control mw-100", @data_validation = "required", @type = "password", @id = "repeatPassword", @placeholder = "Powtórz hasło" })

        </div>
    </div>

    <div class="pt-1">
        <label for="terms">
            <input data-validation="required" data-validation-error-msg="Wymagane jest zapoznanie się z regulaminem" type="checkbox" name="terms" id="terms" value="yes" /> Oświadczam, że zapoznałem/am się z <a href="#">regulaminem</a> i <a href="#">polityką prywatności</a> oraz akceptuję wszystkie zawarte w nich warunki.
        </label>
    </div>

    <div class="pt-1">
        <label for="privacyPolicy"><input data-validation="required" data-validation-error-msg="Musisz wyrazić zgodę na przetwarzanie danych" type="checkbox" name="privacyPolicy" id="privacyPolicy" value="yes" /> Wyrażam zgodę na przetwarzanie moich danych osobowych przez BIKEVISION w celu przeprowadzenia procesu zamówienia produktów oraz świadczenia usług serwisu. </label>
    </div>

    <div class="input-group pt-1 justify-content-end">
        <button type="submit" id="submit" class="btn btn-primary"> Załóż konto </button>
    </div>
