@model bikevision.Models.CarouselItemsViewModel
@{
    ViewBag.Title = "Sklep";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";

}

<section>
    <div id="carouselShop" class="carousel slide carousel-fade w-100" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselShop" data-slide-to="0" class="active"></li>
            <li data-target="#carouselShop" data-slide-to="1"></li>
            <li data-target="#carouselShop" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner bg-dark">
            <div class="carousel-item active">
                <img src="~/Content/Images/Shop/shop_1.jpg" class="d-block image-carousel-responsivity m-auto" />
                <div class="carousel-caption d-none d-md-block">
                    <h5> To jest opis pierwszego obrazka </h5>
                    <p> Lorem ipsum .... </p>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/Content/Images/Shop/shop_2.jpg" class="d-block image-carousel-responsivity m-auto" />
                <div class="carousel-caption d-none d-md-block">
                    <h5> Second slide </h5>
                    <p> Lorem ipsum .... </p>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/Content/Images/Shop/shop_3.jpg" class="d-block image-carousel-responsivity m-auto" />
                <div class="carousel-caption d-none d-md-block">
                    <h5> Third slide </h5>
                    <p> Lorem ipsum .... </p>
                </div>
            </div>
        </div>

        <a class="carousel-control-prev" href="#carouselShop" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#carouselShop" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>

<div class="container-fluid p-0 m-0 bg-light">
    <div class="container pt-5">
        <div class="row">
            <h1 class="ml-4"> Promocje </h1>
        </div>
        <div class="row px-2">
            @if (Model.ItemsOnPromotion.Count() == 0)
            {
                <p class="text-center h1 py-5 my-5"> Aktualnie nie posiadamy produktów na promocji </p>
            }
            else
            {
                <div class="MultiCarousel" data-items="1,3,3,4" data-slide="1" id="MultiCarousel1" data-interval="1000">
                    <div class="hide-content">
                        <div class="MultiCarousel-inner">
                            @foreach (var product in Model.ItemsOnPromotion)
                            {
                                @Html.Partial("_CarouselProduct", product);
                            }
                        </div>
                    </div>
                    <button class="btn btn-primary leftLst"><</button>
                    <button class="btn btn-primary rightLst">></button>
                </div>
            }
        </div>
    </div>
</div>

<div class="container-fluid p-0 m-0 bg-white">
    <div class="container pt-5">
        <div class="row">
            <h1 class="ml-4"> Najnowsze produkty </h1>
        </div>
        <div class="row px-2">
            @if (Model.NewestItems.Count() == 0)
            {
                <p class="text-center h1 py-5 my-5"> Aktualnie nie posiadamy nowych produktów </p>
            }
            else
            {
                <div class="MultiCarousel" data-items="1,3,3,4" data-slide="1" id="MultiCarousel2" data-interval="1000">
                    <div class="hide-content">
                        <div class="MultiCarousel-inner">
                            @foreach (var product in Model.NewestItems)
                            {
                                @Html.Partial("_CarouselProduct", product);
                            }
                        </div>
                    </div>
                    <button class="btn btn-primary leftLst"><</button>
                    <button class="btn btn-primary rightLst">></button>
                </div>
            }
        </div>
    </div>
</div>

<div class="container-fluid p-0 m-0 bg-light">
    <div class="container pt-5">
        <div class="row">
            <h1 class="ml-4"> Popularne produkty </h1>
        </div>
        <div class="row px-2">
            @if (Model.PopularItems.Count() == 0)
            {
                <p class="text-center h1 my-5 py-5"> Aktualnie nie posiadamy produktów popularnych </p>
            }
            else
            {
                <div class="MultiCarousel" data-items="1,3,3,4" data-slide="1" id="MultiCarousel3" data-interval="1000">
                    <div class="hide-content">
                        <div class="MultiCarousel-inner">
                            @foreach (var product in Model.PopularItems)
                            {
                                @Html.Partial("_CarouselProduct", product);
                            }
                        </div>
                    </div>
                    <button class="btn btn-primary leftLst"><</button>
                    <button class="btn btn-primary rightLst">></button>
                </div>
            }
        </div>
    </div>
</div>

<section class="bg-white">
    <p> Newsletter </p>
</section>

@section scripts
{
    @Scripts.Render("~/Scripts/Shop/shop-multicarousel.js")
}

